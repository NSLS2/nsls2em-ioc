record(longout, "$(PriSys){$(PSC)}GoRegSingleWrite") {
  field(DTYP,   "PSC Ctrl Send")
  field(OUT ,   "@CmdPort_$(PSC)")
  field(VAL ,   "80")
  field(FLNK,   "$(PriSys){$(PSC)}send")
}

#Send all buffer to PSC
record(bo,    "$(PriSys){$(PSC)}send") {
  field(DTYP, "PSC Ctrl Send All")
  field(OUT , "@CmdPort_$(PSC)")
  field(ZNAM, "Send")
  field(ONAM, "Send")
}

